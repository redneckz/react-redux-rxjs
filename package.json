{
  "name": "react-redux-rxjs",
  "version": "1.0.0",
  "author": "Alexander Alexandrov",
  "description": "React/Redux are going reactive with RxJS by means of this small library",
  "keywords": [
    "rx",
    "rxjs",
    "react",
    "redux"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/redneckz/react-redux-rxjs"
  },
  "bugs": {
    "url": "https://github.com/redneckz/react-redux-rxjs/issues"
  },
  "homepage": "https://github.com/redneckz/react-redux-rxjs",
  "main": "dist/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "peerDependencies": {
    "rxjs": "^5.0.0",
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0",
    "react-redux": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "lodash": "~4.17.2"
  },
  "devDependencies": {
    "babel-cli": "~6.24.1",
    "babel-core": "~6.24.1",
    "babel-eslint": "~7.2.3",
    "babel-jest": "~20.0.3",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-0": "~6.24.1",
    "coveralls": "~2.13.1",
    "cross-env": "~5.0.0",
    "enzyme": "~2.8.2",
    "eslint": "~3.19.0",
    "eslint-config-airbnb": "~15.0.1",
    "eslint-plugin-import": "~2.3.0",
    "eslint-plugin-jsx-a11y": "~5.0.3",
    "eslint-plugin-react": "~7.0.1",
    "jest-cli": "~20.0.4",
    "react": "~15.5.4",
    "react-dom": "~15.5.4",
    "react-redux": "~5.0.4",
    "react-test-renderer": "~15.5.4",
    "redux": "~3.6.0",
    "rimraf": "~2.6.1",
    "rxjs": "~5.4.0"
  },
  "scripts": {
    "prepublish": "npm run eslint && npm run jest && npm run build",
    "prebuild": "npm run clean",
    "build": "cross-env-shell NODE_ENV=production \"npm run build:commonjs && npm run build:es\"",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --ignore *.spec.* --out-dir dist --source-maps",
    "build:es": "cross-env BABEL_ENV=es babel src --ignore *.spec.* --out-dir es --source-maps",
    "test": "npm run eslint && npm run jest && npm run coveralls",
    "eslint": "eslint \"src/**/*.js\" \"src/**/*.jsx\" --cache --cache-location \"./.cache\"",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "coveralls": "coveralls < coverage/lcov.info",
    "clean": "rimraf dist es"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ]
  }
}
